<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ktrnka.droidling"
    android:versionCode="33"
    android:versionName="1.01" 
    >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        android:allowBackup="false" >
        <activity
            android:name="com.github.ktrnka.droidling.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.github.ktrnka.droidling.PersonalActivity"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="com.github.ktrnka.droidling.InterpersonalActivity" 
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="com.github.ktrnka.droidling.LanguageIdentificationActivity" 
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="com.github.ktrnka.droidling.AboutActivity" />
        <activity android:name="com.github.ktrnka.droidling.AboutStatsActivity" />
        </application>

</manifest>